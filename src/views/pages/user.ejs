<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/tooltip.css">
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://momentjs.com/downloads/moment.js"></script>
    <script src="/js/dashboard/dashboard.js"></script>
    <script src="/js/dashboard/user-redirect.js"></script>

    <title>Dashboard</title>
</head>
<body>
    <%- include('../partials/navbar.ejs')%>
    <main>
        <section id="top-section">
            <div id="profile-div">
                <img id="profile-div-pfp" src="https://gratisography.com/wp-content/uploads/2024/11/gratisography-augmented-reality-800x525.jpg" alt="Profile Picture">
                <div id="user-info">
                    <h2 id="user-info-name">---</h2>
                    <p id="user-info-joined">---</p>
                    <p id="user-info-followers">---</p>
                </div>
            </div>
            <div id="tabs-div">
                <ul>
                    <li class="tab-item <%= section === 'overview' ? 'item-selected' : '' %>" onclick="userRedirect('overview')">Overview</li>
                    <li class="tab-item <%= section === 'reports' ? 'item-selected' : '' %>" onclick="userRedirect('reports')">Reports</li>
                    <li class="tab-item <%= section === 'top' ? 'item-selected' : '' %>" onclick="userRedirect('top')">Top</li>
                    <li class="tab-item <%= section === 'following' ? 'item-selected' : '' %>" onclick="userRedirect('following')">Following</li>
                </ul>
            </div>
        </section>

        <div id="middle-section">
            <% if (section === "overview") {%>
                    <section id="recent-tracks">
                        <h2>Recent Tracks</h2>
                        <ul></ul>
                    </section>
                    <section id="stats-intro">
                    </section>

            <% } else if (section === "reports") { %>
                <div id="section-reports">
                    <h2>Reports</h2>
                    <p>Reports content goes here...</p>
                </div>

            <% } else if (section === "top") { %>
                <div id="section-top">
                    <h2>Top Charts</h2>
                    <p>Top tracks, artists, or albums go here...</p>
                </div>

            <% } else { %>
                <div id="section-default">
                    <h2>Not Found</h2>
                    <p>how aer u herer bro</p>
                </div>
            <% } %>
        </div>

    </main>
    <%- include('../partials/footer.ejs') %>
</body>
</html>
