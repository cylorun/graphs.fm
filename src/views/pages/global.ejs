<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
    <link rel="stylesheet" href="/css/global-page.css">

    <title>Global stats</title>
</head>
<body>
    <%- include('../partials/navbar.ejs')%>

    <main>
        <div id="top-tracks">
            <h2>Top tracks</h2>

            <ul>
                <% topTracks.forEach((track, i) => {%>
                    <li> <%= i+1 %>. <span id="track-name"> <a target="_blank" href="/t/<%= track.id %>"><%= track.trackName %></a></span> - <%= track.playCount %></li>
                <% })%>
            </ul>
        </div>
        <div id="top-artists">
            <h2>Top artists</h2>

            <ul>
                <% topArtists.forEach((artist, i) => { %>
                    <li> <%= i+1 %>. <span id="artist-name"><a target="_blank" href="/a/<%= artist.id %>"><%= artist.artistName %></a></span>  - <%= artist.playCount %></li>
                <% })%>
            </ul>
        </div>
    </main>

    <%- include('../partials/footer.ejs') %>
</body>
</html>